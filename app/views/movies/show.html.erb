<section class="movie-details">
  <div class="summary">
  <%= image_tag(@movie.image_file_name)%>
    <h1><%= @movie.title %></h1>
      <h2>
        <%= year_of(@movie) %> &bull; <%= @movie.rating %>
      </h2> 
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
      <tr>
        <th>Duration</th>
        <td><%= @movie.duration %></td>
      </tr>
    </table>
    <div class="reviews">
      <span class="Stars" > 
       <%= average_stars(@movie) %> / 
       <%= link_to pluralize(@movie.reviews.size, "Review"), movie_reviews_path(@movie)%></span>
          <p>
            <%= link_to "Write Review", new_movie_review_path(@movie) ,class: "review"%>
          </p>
      </p>
    </section>
    <section class="admin">
      <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
        <%= link_to "Delete", movie_path(@movie), class: "button", 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </section>
