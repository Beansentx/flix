<h1>New Review for <%= link_to @movie.title, @movie %></h1>

<%= form_with(model: [@movie, @review]) do |r| %>

   <%= render "shared/errors", object: @review %>

        <%= r.label :name %>
        <%= r.text_field :name, autofocus: true %>

        <%= r.label :stars %>
        <%= r.label :stars %>
            <% Review::STARS.each do |star| %>
                <span class="star">
                    <%= r.radio_button :stars, star %>
                    <%= label_tag star %>
                </span>
            <% end %>

        <%= r.label :comment %>
        <%= r.text_area :comment, placeholder: "What are your thoughts about the Movie?" %>

        <%= r.submit 'Post Review' %>

<% end %>

